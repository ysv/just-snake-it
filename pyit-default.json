{
  "verbose": false,
  "cops": {
    "mixed_indentation_cop": {
      "enabled" : true
    },
    "tab_indentation_cop": {
      "enabled" : true
    },
    "space_indentation_cop": {
      "enabled" : true
    },
    "line_length_cop": {
      "enabled" : true,
      "max_length": 80
    },
    "binary_operator_line_brake_cop": {
      "enabled" : true
    },
    "blank_lines_cop": {
      "enabled" : true,
      "top_level_blanklines": 2,
      "nested_level_blanklines": 1,
      "logical_blanklines": 1
    },
    "multiple_import_cop": {
      "enabled" : true
    }
  }
}
